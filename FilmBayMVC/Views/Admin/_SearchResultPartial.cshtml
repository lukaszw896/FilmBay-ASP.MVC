@model List<FilmBayMVC.Models.MovieSearchReturnObjectViewModel>

<table>
    <tr>
        <th> Title</th>
    </tr>
    @if (Model != null)
    {
        for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>
                    <label style="background-color:red">test</label>
                    @{
                    String tmpOrginalTitle = "orginalTitle" + i;
                    <label id=@tmpOrginalTitle>@Model[i].orginalTitle</label>
                    String tmpPosterPath = "posterPath" + i;
                    <img id=@tmpPosterPath src="@Model[i].posterPath" style="height:200px"/>
                    }
                    @{String tmpId = "id" + i;
                    <label id=@tmpId style="visibility:hidden">@Model[i].id</label>
                    }   
                </td>
                <td>
                    <div>
                        <table>
                            <tr>
                                <td>
                                    @{
                                     String idReleaseDate = "releaseDate" + i;

                                    <label id="@idReleaseDate">@Model[i].releaseDate</label>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @{
                    string idTitle = "title" + i;
                    <label id=@idTitle>@Model[i].title</label>
                                    }
                                </td>
                            </tr>
                        </table>

                    </div>
                    @{
                        string idPopularity = "popularity"+i;
                    <label id=@idPopularity style="visibility:hidden">@Model[i].popularity</label>
                    }
                    @{
                         string idButton = "button" + i;
                    }
                    <button id=@idButton onclick="partialViewButtonClick(this.id)">Add to database</button>
                </td>
            </tr>
        }
    }
</table>
