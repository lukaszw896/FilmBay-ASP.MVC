       <div class="container">
        @{
            for (int i = 0; i < Model.filmsToShow.Count; i++)
            {
                String filmid = Model.filmsToShow[i].id.ToString();
                <label hidden id="@filmid">@filmid</label>
            }
        }
    </div>
    <div class="row">
        @if (Model != null)
        {
            for (int i = 0; i < Model.filmsToShow.Count(); i++)
            {
                <div class="row"><br /></div>
                <div class="row">
                    <div class="col-sm-3 col-xs-2">
                        <div class="row">
                            @Html.ActionLink(@Model.filmsToShow[i].Title, "FilmPage", "FilmPage", new { id = Model.filmsToShow[i].id }, null)   (@Model.filmsToShow[i].ReleaseDate.ToString())

                        </div>
                        <div class="row">
                            <span class="glyphicon glyphicon-star"></span> @Model.filmsToShow[i].rating /5
                        </div>
                        <div class="row">
                            Directed by @Model.filmsToShow[i].Director
                        </div>
                    </div>
                    <div class="col-sm-3 col-xs-2">
                        <img src="@Model.filmsToShow[i].poster" class="img-responsive" style="height:160px" />
                    </div>
                </div>
            }
        }
    </div>
<div class="row">
    <input id="input-2" class="rating" data-min="0" data-max="5" data-step="0.1">
