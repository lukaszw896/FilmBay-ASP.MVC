@model List<FilmBayMVC.Models.FilmToShow>
@{
    ViewBag.Title = "UserInfo";
}
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</head>

<h2>My movies:</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @if (Model != null)
        {
            for (int i = 0; i < Model.Count; i++)
            {
                <div class="row"><br /></div>
                <div class="row">
                    <div class="col-sm-4 col-xs-2" >
                        <div class="row">
                            @Html.ActionLink(@Model[i].Title, "Index")   (@Model[i].ReleaseDate.ToString())
                           
                        </div>
                        <div class="row">
                            <span class="glyphicon glyphicon-star"></span> @Model[i].rating /10
                        </div>
                        <div class="row">
                          Directed by @Model[i].Director
                        </div>
                    </div>
                    <div class="col-sm-4 col-xs-4">
                        <img src="@Model[i].poster" class="img-responsive" style="height:160px" />
                    </div>
                </div>
            }
        }
    </div>
}

       
